@model ListaTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h2>Tem certeza que deseja excluir esta tarefa?</h2>

<div>
    <h4>@Model.Titulo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Concluída</dt>
        <dd class="col-sm-10">@Model.Concluida</dd>

        <dt class="col-sm-2">Data de Criação</dt>
        <dd class="col-sm-10">@Model.DataCriacao</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
