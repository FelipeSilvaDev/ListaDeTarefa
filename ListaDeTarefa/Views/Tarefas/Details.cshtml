@model ListaTarefas.Models.Tarefa

@{
    ViewData["Title"] = "Detalhes da Tarefa";
}

<h2>@ViewData["Title"]</h2>

<div>
    <p><strong>Título:</strong> @Model.Titulo</p>
    <p><strong>Concluída?</strong> @(Model.Concluida ? "Sim" : "Não")</p>
    <p><strong>Data de Criação:</strong> @Model.DataCriacao.ToShortDateString()</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>

